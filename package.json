{
	"name": "vite-react-boilerplate",
	"author": "Jack Qin <fudong.qin@outlook.com>",
	"description": "A production ready, batteries included starter template for Vite + React projects",
	"keywords": [
		"vite",
		"react",
		"boilerplate",
		"starter",
		"template"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/qinscode/vite-react-boilerplate"
	},
	"license": "MIT",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"setup": "git init && npx husky init && npx playwright install && shx rm .husky/pre-commit",
		"format": "prettier \"src/**/*.{ts,tsx}\" --write",
		"lint": "eslint --max-warnings 0",
		"lint:fix": "eslint --max-warnings 0 --fix",
		"dev": "vite",
		"storybook": "storybook dev -p 6006",
		"storybook:setup": "node node_modules/@storybook/addon-styling/bin/postinstall.js",
		"storybook:build": "storybook build",
		"test": "vitest run src/ && playwright test",
		"test:unit": "vitest src/",
		"test:unit:coverage": "vitest --coverage src/",
		"test:e2e": "playwright test",
		"test:e2e:report": "playwright show-report",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"commitlint": "commitlint --edit",
		"commitizen": "exec < /dev/tty && git cz --hook || true",
		"prepare": "husky"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@nivo/bar": "^0.99.0",
		"@nivo/core": "^0.99.0",
		"@nivo/line": "^0.99.0",
		"@nivo/pie": "^0.99.0",
		"@tanstack/react-query": "^5.90.6",
		"@tanstack/react-router": "^1.134.9",
		"@tanstack/react-table": "^8.21.3",
		"dayjs": "^1.11.19",
		"i18next": "^25.6.0",
		"i18next-browser-languagedetector": "^8.2.0",
		"i18next-http-backend": "^3.0.2",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-hook-form": "^7.66.0",
		"react-i18next": "^16.2.4",
		"zod": "^4.1.12",
		"zustand": "^5.0.8"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.1",
		"@faker-js/faker": "^10.1.0",
		"@headlessui/react": "^2.2.9",
		"@heroicons/react": "^2.2.0",
		"@hookform/devtools": "^4.4.0",
		"@playwright/test": "^1.56.1",
		"@storybook/addon-essentials": "^8.6.14",
		"@storybook/addon-interactions": "^8.6.14",
		"@storybook/addon-links": "^10.0.3",
		"@storybook/addon-themes": "^10.0.3",
		"@storybook/blocks": "^8.6.14",
		"@storybook/react": "^10.0.3",
		"@storybook/react-vite": "^10.0.3",
		"@storybook/test": "^8.6.14",
		"@tailwindcss/vite": "^4.1.16",
		"@tanstack/react-query-devtools": "^5.90.2",
		"@tanstack/react-table-devtools": "^8.21.3",
		"@tanstack/router-devtools": "^1.134.9",
		"@tanstack/router-plugin": "^1.134.9",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/node": "^24.10.0",
		"@types/react": "^19.2.2",
		"@types/react-dom": "^19.2.2",
		"@typescript-eslint/eslint-plugin": "^8.46.3",
		"@typescript-eslint/parser": "^8.46.3",
		"@vitejs/plugin-react-swc": "^4.2.0",
		"@vitest/coverage-v8": "4.0.6",
		"autoprefixer": "^10.4.21",
		"commitizen": "^4.3.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^7.0.1",
		"eslint-plugin-react-refresh": "^0.4.24",
		"eslint-plugin-storybook": "^10.0.3",
		"eslint-plugin-unicorn": "^62.0.0",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jsdom": "^27.1.0",
		"prettier": "^3.6.2",
		"prop-types": "^15.8.1",
		"shx": "^0.4.0",
		"storybook": "^8.6.14",
		"tailwindcss": "^4.1.16",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.3",
		"vite": "7.1.12",
		"vite-plugin-static-copy": "^3.1.4",
		"vitest": "4.0.6"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
